rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Дозволяємо читати та записувати дані авторизованим користувачам
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Специфічні правила для колекцій
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /questions/{docId} {
      allow read, write: if request.auth != null;
    }
    
    match /habits/{docId} {
      allow read, write: if request.auth != null;
    }
    
    match /emotions/{docId} {
      allow read, write: if request.auth != null;
    }
    
    match /challenges/{docId} {
      allow read, write: if request.auth != null;
    }
    
    match /points/{docId} {
      allow read, write: if request.auth != null;
    }
  }
} 